{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/server.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "backend/dist/**/*",
          "frontend/dist/**/*"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/apiv1/(.*)",
      "dest": "/backend/dist/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/backend/dist/server.js"
    }
  ]
}
